@model List<string>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form method="post" asp-action="Add" enctype="application/x-www-form-urlencoded">
    <input type="text" name="name" />
    <button>Send</button>
</form>
<p>
    <a asp-controller="List" asp-action="DeleteFirstItem">Delete First Item</a>
</p>
<ul>
    @foreach (var item in Model)
    {
        <li>@item <a asp-controller="List" asp-action="Delete" asp-route-name="@item">Delete</a></li>
    }
</ul>
